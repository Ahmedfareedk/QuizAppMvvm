<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".DetailsFragment">

    <ImageView
        android:id="@+id/quiz_image_view_details"
        android:layout_width="0dp"
        android:layout_height="356dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_quiz_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Quiz Title"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/quiz_image_view_details"
        app:layout_constraintTop_toBottomOf="@id/quiz_image_view_details" />

    <TextView
        android:id="@+id/list_quiz_desc_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Quiz Description"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/quiz_image_view_details"
        app:layout_constraintTop_toBottomOf="@id/list_quiz_title_details" />

    <TextView
        android:id="@+id/list_quiz_difficulty_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Difficulty"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/list_quiz_title_details"
        app:layout_constraintTop_toBottomOf="@id/list_quiz_desc_details" />

    <TextView
        android:id="@+id/list_quiz_total_questions_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Questions"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/list_quiz_title_details"
        app:layout_constraintTop_toBottomOf="@id/list_quiz_difficulty_details" />


    <TextView
        android:id="@+id/list_quiz_difficulty_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="NA"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/list_quiz_difficulty_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_quiz_difficulty_details" />

    <TextView
        android:id="@+id/list_quiz_total_questions_details_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="NA"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/list_quiz_total_questions_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_quiz_total_questions_details" />


    <TextView
        android:id="@+id/list_quiz_last_score_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Your Last Score"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/list_quiz_total_questions_details"
        app:layout_constraintTop_toBottomOf="@id/list_quiz_total_questions_details" />

    <TextView
        android:id="@+id/list_quiz_last_score_details_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="NA"
        android:textColor="@color/colorLightText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/list_quiz_last_score_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_quiz_last_score_details" />


    <Button
        android:id="@+id/start_quiz_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/list_button_background"
        android:fontFamily="@font/crimson_text_semibold"
        android:padding="16dp"
        android:text="Start Quiz"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>